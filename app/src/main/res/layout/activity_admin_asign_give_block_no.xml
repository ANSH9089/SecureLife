<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registerbsk"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/register_applogo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/security"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />


    <TextView
        android:id="@+id/register1_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_applogo"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#02066F"
        android:textColorHint="#02066F"
        android:textSize="19sp"
        android:gravity="center"
        />
    <TextView

        android:id="@+id/register1_username_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register1_username_input"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Working Address"
        android:inputType="text"
        android:textColor="#02066F"
        android:textColorHint="#02066F"
        android:textSize="19sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/register1_username_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register1_username_address"
        android:background="@drawable/button"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Description"
        android:inputType="text"
        android:textColor="#02066F"
        android:textColorHint="#02066F"
        android:textSize="19sp"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/register1_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register1_username_description"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColor="#02066F"
        android:textColorHint="#02066F"
        android:textSize="19sp" />


    <EditText
        android:id="@+id/register_allocate_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register1_phone_number_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn2"
        android:hint="Select Block No You Want To Allocate"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#02066F"
        android:textColorHint="#02066F"
        android:textSize="19sp" />

    <Button
        android:id="@+id/register1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_allocate_room"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_green"
        android:padding="17dp"
        android:text="Assign Room"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/room_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_allocate_room"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="117dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/circle_green"
        android:padding="17dp"
        android:text="Decline"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>